extends ../dashboard

block inner-content
  h2 Setting
  .container
    .row
      p.col-3.mt-4 Name
      p.col-3.mt-4 Current Value
      p.col-3.mt-4 New Value
  form(method='post', action='/system/configuration/settings')
    -
    each setting in settingsPug
      .row
        .col-3.mb-3 #{setting.name}
        .col-3.mb-3
          input.form-control(type='number' name=setting.name value=setting.value readonly=true)
        .col-3.mb-3
          //input#newsettingValue.form-control(type='number' name=newSettingValuePug min=minPug max=maxPug)
          input.form-control(type='number' name=newSettingValuePug)
    .row
      .col-2.mb-3
        button.btn.btn-primary.btn-lg(type='submit') Save
  h2 User
  .row.mb-3
    .col-md-12.col-lg-12
      form(method='post', action='/system/configuration/users')
        .row
          button(type='submit' name='all') All
          button(type='submit' name='admin') Admin
          button(type='submit' name='notAdmin') Not Admin
          input(type='text' name='filter' placeholder='id1,id2,id3...')
          button(type='submit' name='find') Find
        .row
          button(type='submit' name='move') Move
          button(type='submit' name='add') Add
        div.tab-content
          div.tab-pane.show.active(id='user')
            .table-responsive
              table(class='table table-striped table-hover' cellpadding='5')
                thead
                  tr
                    th Employee ID
                    th Email
                    th Name
                    th User Type
                tbody
                  -
                  each user in usersPug
                    tr
                      td
                        input(type='checkbox' name=user.id)
                        |   #{user.id}
                      td #{user.email}
                      td #{user.name}
                      if user.isAdmin
                        td.bg-success Admin
                      else
                        td.bg-warning Not Admin