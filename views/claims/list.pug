    .col-12.text-center
      h2 Managed
  .row.mb-3
    .col-md-12.col-lg-12
      ul.nav.nav-tabs
        li.nav-item
          a(class='nav-link active' href='#managed-all' id='all-tab' data-toggle='tab' aria-controls='home' aria-expanded='true') All
        li.nav-item
