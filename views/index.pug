extends dashboard

block inner-content
  h1= "Expense Claim"
  .container
    .py-5
      .row
        .col-md-12.col-lg-12
          .row
            .col-md-4 Claim ID
              input#id.form-control(type="text" value="123456" readonly=true)
            .col-md-4.mb-4 Cost Centre
              input.form-control(type="text" value="0754" readonly=true)
            .col-md-4 Claim Status
              input.form-control(type="text" value="Pending" readonly=true)
          br
          h3 Claim Items
          .row
            .table-responsive
              table(class="table table-striped" border="1" cellpadding="5" width="100%")
                thead
                  tr
                    th(width="3%") #
                    th(width="10%") Date
                    th(width="57%") Expense Category
                    th(width="10%") No. KM
                    th(width="10%") GL
                    th(width="10%") Amount $

                tbody(id="claimItems")
                  tr
                    td 1
                    td 2018/01/01
                    td AUTO GAS (Community or Facilities employees only)
                    td N/A
                    td 633710
                    td 50.00
                  tr
                    td 2
                    td 2018/01/15
                    td MILEAGE (kilometres traveled using personal vehicle)
                    th 500
                    td 633400
                    td 270.00
          .row.justify-content-end
            h4 Total
            .col-md-2
              input.form-control(type="text" value="320.00" readonly=true)

          br
          br
          .row
            .col-md-2
              h6 Manage ID
              input.form-control(type="text" value="2" readonly=true)
            .col-md-10
              h6 Comment
              input.form-control(type="text" value="N/A" readonly=true)
          br
          .row
            .col-md-2
              h6 Submitted Date
              input.form-control(type="text" value="2018/02/01" readonly=true)
            .col-md-2
              h6 Approved Date
              input.form-control(type="text" value="N/A" readonly=true)


