extends layout

block content
  div.expense-claim-app.h-100
    nav.navbar.sticky-top.background-alternate.flex-md-nowrap.p-0
      a.navbar-brand.background-dark.text-white.col-md-3.mr-0(href='/')
        .row.align-items-center
          .col-sm-3
            img.img-fluid#brand-logo(src='/images/logo.png' alt='Coast Capital Savings')
          .col-sm-9
            span.navbar-brand Coast Capital Savings
      ul.navbar-nav.px-3
        li.nav-item.text-nowrap
          a.nav-link.text-white(href='/logout') Sign out
