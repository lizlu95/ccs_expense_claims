extends layout

block content
  div#expense-claim-app
    nav.navbar.sticky-top.background-alternate.flex-md-nowrap.p-0
      a.navbar-brand.background-dark.text-white.col-xl-3.mr-0(href='/')
        .row.align-items-center
          .col-12.my-2
            img#navbar-logo.mx-3(src='/images/logo.png' alt='Coast Capital Savings')
            span#navbar-brand Coast Capital Savings
      ul.navbar-nav.px-4
        li.nav-item.text-nowrap
          a.nav-link.text-white(href='/logout') Sign out
    .container-fluid
      .row.h-100
        nav.col-xl-3.bg-light.sidebar
          .sidebar-sticky.pt-45
            ul.nav.flex-column
              li.nav-item
                a.nav-link(href='/claims')
                  svg.feather.feather-file(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                          path(d='M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z')
                          polyline(points='13 2 13 9 20 9')
                  | Claims
              if isAdmin
                li.nav-item
                  a.nav-link(href='/reports')
                    svg.feather.feather-file-text(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                      path(d='M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z')
                      polyline(points='14 2 14 8 20 8')
                      line(x1='16', y1='13', x2='8', y2='13')
                      line(x1='16', y1='17', x2='8', y2='17')
                      polyline(points='10 9 9 9 8 9')
                    | Reports
                li.nav-item
                  a.nav-link(href='/users')
                    svg.feather.feather-users(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                      path(d='M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2')
                      circle(cx='9', cy='7', r='4')
                      path(d='M23 21v-2a4 4 0 0 0-3-3.87')
                      path(d='M16 3.13a4 4 0 0 1 0 7.75')
                    | Users
                li.nav-item
                  a.nav-link(href='/limits')
                    svg.feather.feather-layers(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                      polygon(points='12 2 2 7 12 12 22 7 12 2')
                      polyline(points='2 17 12 22 22 17')
                      polyline(points='2 12 12 17 22 12')
                    | Limits
                li.nav-item
                  a.nav-link(href='/system/configuration')
                    svg.feather.feather-bar-chart-2(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                      line(x1='18', y1='20', x2='18', y2='10')
                      line(x1='12', y1='20', x2='12', y2='4')
                      line(x1='6', y1='20', x2='6', y2='14')
                    | Configuration
          a.nav-link(href='/settings')
            i.fas.fa-cog.mr-2
            span Settings
          h6.sidebar-heading.d-flex.justify-content-between.align-items-center.px-3.mt-4.mb-2.text-muted
            span Recent Claims
          ul.nav.flex-column.mb-5
            each expenseClaim in recentExpenseClaims
              li.nav-item
                a.nav-link(href='/claims/' + expenseClaim.id)
                  svg.feather.feather-file-text(xmlns='http://www.w3.org/2000/svg', width='24', height='24', viewbox='0 0 24 24', fill='none', stroke='currentColor', stroke-width='2', stroke-linecap='round', stroke-linejoin='round')
                    path(d='M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z')
                    polyline(points='14 2 14 8 20 8')
                    line(x1='16', y1='13', x2='8', y2='13')
                    line(x1='16', y1='17', x2='8', y2='17')
                    polyline(points='10 9 9 9 8 9')
                  span= expenseClaim.id
        main.col-xl-9(role='main')
          .container.my-49
            if error
              .row.mb-4
                .col-12
                  .alert.alert-danger.text-center(role='alert')
                    span= error
            if success
              .row.mb-4
                .col-12
                  .alert.alert-success.text-center(role='alert')
                    span= success
            block inner-content
  .footer.background-footer.text-center
    .container
      .row
        .col-12
          Copyright Coast Capital Savings &#169; #{currentYear}

block scripts
