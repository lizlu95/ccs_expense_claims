extends dashboard

block inner-content
  .container
    .row.mb-6
      a(href='/claims/new')
        button.btn.btn-sm.btn-outline-secondary.btn-green(id="newClaim") Create New Claim
    .py-5
      .row
        .col-md-12.col-lg-12
          ul.nav.nav-tabs
            li.nav-item
              a(class="nav-link active" href="#all" id="all-tab" data-toggle="tab" aria-controls="home" aria-expanded="true") All
            li.nav-item
              a(class="nav-link" href="#pending" id="pending-tab" data-toggle="tab") Pending
            li.nav-item
              a(class="nav-link" href="#approved" id="approved-tab" data-toggle="tab") Approved
            li.nav-item
              a(class="nav-link" href="#rejected" id="rejected-tab" data-toggle="tab") Rejected
            li.nav-item
              a(class="nav-link" href="#forwarded" id="forward-tab" data-toggle="tab") Forwarded

          div.tab-content
            div.tab-pane.show.active(id="all")
              .table-responsive
                table(class="table table-striped" border="1" cellpadding="5" width="100%")
                  thead
                    tr
                      th(width="10%") Claim ID
                      th(width="10%") Date
                      th(width="20%") Manager
                      th(width="45%") Description
                      th(width="20%") Current Status

