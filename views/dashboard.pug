      .row.h-100
        nav.col-sm-3.col-md-3.col-lg-3.d-none.d-md-block.bg-light.sidebar
          .sidebar-sticky.pt-3
            ul.nav.flex-column
              li.nav-item
                a.nav-link.active(href='/')
