extends ../dashboard

block inner-content
  h2 Setting
  .container
    .row
      p.col-3.mt-4 Name
      p.col-3.mt-4 Current Value
      p.col-3.mt-4 New Value
  form(method='post', action='/system/configuration/settings')
    -
    each setting in settingsPug
      .row
        .col-3.mb-3 #{setting.name}
        .col-3.mb-3
          input#settingValue.form-control(type='number' name=setting.name value=setting.value readonly=true)
        .col-3.mb-3
          input#newsettingValue.form-control(type='number' name=newSettingValuePug)
    .row
      .col-2.mb-3
        button.btn.btn-primary.btn-lg(type='submit') Save
  h2 User
  .row.mb-3
    .col-md-12.col-lg-12
      ul.nav.nav-tabs
        li.nav-item
          a(class='nav-link active' href='#user' id='all-tab' data-toggle='tab' aria-controls='home' aria-expanded='true') All
        li.nav-item
          a(class='nav-link' href='#admin' id='admin-tab' data-toggle='tab') Admin
        li.nav-item
          a(class='nav-link' href='#not_admin' id='not_admin-tab' data-toggle='tab') Not Admin
      div.tab-content
        div.tab-pane.show.active(id='user')
          .table-responsive
            table(class='table table-striped table-hover' cellpadding='5')
              thead
                tr
                  th Employee ID
                  th Email
                  th Name
                  th Update Date
                  th User Type
              tbody
                -
                each user in usersPug
                  tr
                    td #{user.id}
                    td #{user.email}
                    td #{user.name}
                    td #{user.updated_at}
                    if user.isAdmin
                      td.bg-success Admin
                    else
                      td.bg-warning Not Admin
                    td
        div.tab-pane(id='admin')
          .table-responsive
            table(class='table table-striped table-hover' cellpadding='5')
              thead
                tr
                  th Employee ID
                  th Email
                  th Name
                  th Update Date
                  th User Type
              tbody
                -
                each admin in adminsPug
                  tr
                    td #{admin.id}
                    td #{admin.email}
                    td #{admin.name}
                    td #{admin.updated_at}
                    td.bg-success Admin
        div.tab-pane(id='not_admin')
          .table-responsive
            table(class='table table-striped table-hover' cellpadding='5')
              thead
                tr
                  th Employee ID
                  th Email
                  th Name
                  th Update Date
                  th User Type
              tbody
                -
                each notAdmin in notAdminsPug
                  tr
                    td #{notAdmin.id}
                    td #{notAdmin.email}
                    td #{notAdmin.name}
                    td #{notAdmin.updated_at}
                    td.bg-warning Not Admin