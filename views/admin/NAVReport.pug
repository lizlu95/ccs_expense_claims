extends ../dashboard

block inner-content
    h1 NAV Reports
        h3 Filters
        form(method='post', action='/reports?report_type=nav')
            .container
                .row
                    .col-4.mb-3
                        label(for='fdate') From Date
                        input#fdate.form-control(type='date' value='' name='report_start_date')
                    .col-4.mb-3
                        label(for='tdate') To Date
                        input#tdate.form-control(type='date' value='' name='report_end_date')
                .row
                    .col-2.mb-3
                        button.btn.btn-primary.btn-lg(type='submit') Submit
        h3 Report List
        div.tab-content
            div.tab-pane.show.active(id='report')
                .table-responsive
                    table(class='table table-striped table-hover' cellpadding='5')
                        thead
                            tr
                                th Report ID
                                th Type
                                th Ready?
                        tbody
                            -
                            each report in reports
                                tr
                                    td
                                        input(type='checkbox' name=report.id)
                                        |   #{report.id}
                                    td #{report.type}
                                    if report.bool
                                        td.bg-success True
                                    else
                                        td.bg-warning False
