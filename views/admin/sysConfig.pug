extends ../dashboard

block inner-content
  h2 Setting
  .container
    .row
      p.col-3.mt-4 Name
      p.col-3.mt-4 Current Value
      p.col-3.mt-4 New Value
  form(method='post', action='/system/configuration/settings')
    -
    each setting in settingsPug
      .row
        .col-3.mb-3 #{setting.name}
        .col-3.mb-3
          input.form-control(type='number' name=setting.name value=setting.value readonly=true)
        .col-3.mb-3
          input.form-control(type='number' name=newSettingValuePug)
    .row.mb-4
      .col-2.mb-3
        button.btn.btn-primary(type='submit') Save
  h2.mb-3 Administrators
  .row.mb-3
    .col-md-12.col-lg-12
      form(method='post', action='/system/configuration/users')
        .row.mb-4
          .col-lg-6
            input.w-100.form-control(type='text' name='filter' placeholder='id1,id2,id3...')
          .col-lg-6
            button.w-100(type='submit' name='find' class='btn btn-success') Search
        .row.mb-4
          .col-md-4
            button.w-100(type='submit' name='all' class='btn btn-primary') All
          .col-md-4
            button.w-100(type='submit' name='admin' class='btn btn-primary') Admin
          .col-md-4
            button.w-100(type='submit' name='notAdmin' class='btn btn-primary') User
        div.tab-content.mb-3
          div.tab-pane.show.active(id='user')
            .table-responsive
              table(class='table table-striped table-hover' cellpadding='5')
                thead
                  tr
                    th Employee ID
                    th Email
                    th Name
                    th Type
                tbody
                  -
                  each user in usersPug
                    tr
                      td
                        input(type='checkbox' name=user.id)
                        |   #{user.id}
                      td #{user.email}
                      td #{user.name}
                      if user.isAdmin
                        td.table-success Admin
                      else
                        td.table-warning User
        .row
          .col-md-6
            button.w-100(type='submit' name='add' class='btn btn-success') Promote
          .col-md-6
            button.w-100(type='submit' name='move' class='btn btn-danger') Demote
